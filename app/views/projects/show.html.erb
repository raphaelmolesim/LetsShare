<p id="notice"><%= notice %></p>

<div class="left_panel">
	
	<div>
		<p>
			<%= link_to 'Edit', edit_project_path(@project), { :class => "right" } %>
			<h2>Details</h2>
		</p>
		
		<p>
		  <b>Name:</b>
		  <%= @project.name %>
		</p>

		<p>
		  <b>Description:</b>
		  <%= @project.description %>
		</p>

		<p>
		  <b>Owner:</b>
		  <%= @project.owner.name %>
		</p>

		<p>
		  <b>Do at:</b>
		  <%= @project.do_at %>
		</p>
	</div>
	
</div>

<div class="right_panel">
	
	<p>
		<a href="/users/invite/<%= @project.id %>" class="right">Invite More People</a>
		<h2>Participants</h2>
	</p>
		
	<ul>
	<% @project.users.each do |user| %>
		<li><%= user.name %></li>
	<% end %>
	</ul>
	
</div>



